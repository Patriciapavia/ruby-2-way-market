




<% if item.errors.any? %>
    <div class="errors">
        <% item.errors.full_messages.each do |error| %>
            <p><%= error %></p>
        <% end %>
    </div>
<% end %>
<%= form_with model: item, local: true do |form| %>
<div>
  <%= form.select(:category_id, options_for_select(@categories), :prompt => "Select category") %>
  
</div>
  <div>
  	<%= form.label :title %>
  	<%= form.text_field :title, value: item.title %>
  </div>
   <div>
  	<%= form.label :description %>
  	<%= form.text_field :description, value: item.description%>
  </div>
   <div>
  	<%= form.label :size %>
  	<%= form.text_field :size, value: item.size %>
  </div>
   <div>
  	<%= form.label :color %>
  	<%= form.text_field :color, value: item.color %>
  	 <div>
  	<%= form.label :price %>
  	<%= form.number_field :price, value: item.price %>
  </div>
  <div>
    <%= form.label :image %>
    <%= form.file_field :image %>
    
  </div>
  <div>
 	<%= form.submit value: "Create" %>
  </div>

<% end %>
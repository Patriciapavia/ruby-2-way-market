
<body>
<h1>All Items</h1>
<h1>Category</h1>
   <% Category.all.each do |category| %>
   <li class="<%'active' if params[:category ] == category.name%>">
    <%= link_to category.name, items_path(category: category.name), class: "link"%>        
  <% end %>

<h1 class="current-category"> <%= params[:category]%></h1>
<% if @items.count == 0%>
  <h1>There are no items currently in this category</h1>
 <% else %> 
    
 <div class="items">
   <% @items.each do |item|%> 
      <div class="item">
             <div class="info">
            <div class="info-bar">
            <%= image_tag item.image if item.image.attached? %>   
               <h4><%= link_to "#{item.title} #{number_to_currency(item.price)}", item_path(item.id) %> </h4>
            
           </div>
          </div>
      </div>
<% end %>

 <% end %>

  
<h1> <%= link_to "Add item", new_items_path %></h1>




</body>

